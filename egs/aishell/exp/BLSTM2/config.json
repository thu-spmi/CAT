{
    "net": {
        "type": "BLSTM",
        "lossfn": "crf",
        "lamb": 0.01,
        "kwargs": {
            "n_layers": 6,
            "idim": 120,
            "hdim": 320,
            "num_classes": 218,
            "dropout": 0.5
        }
    },
    "specaug_config": {
        "time_warp_window": 0.2,
        "freq_mask_width_range": 0.15,
        "num_freq_mask": 2,
        "time_mask_width_range": 0.1,
        "num_time_mask": 2,
        "delta_feats": true
    },
    "scheduler": {
        "type": "SchedulerWarmupMileStone",
        "optimizer": {
            "type_optim": "Adam",
            "kwargs": {
                "lr": 3e-4,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-6
            }
        },
        "kwargs": {
            "total_batch_size": 128,
            "warmup_epoch": 6,
            "refer_batch": 100,
            "refer_lr": 3e-4,
            "lr_stop": 1e-6,
            "gamma": 0.3,
            "reverse_metric_direc": true
        }
    }
}
