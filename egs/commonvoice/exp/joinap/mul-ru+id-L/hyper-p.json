{
    "data": {
        "train": [
            "id-excluded_train",
            "ru-excluded_train"
        ],
        "dev": [
            "id-dev",
            "ru-dev"
        ],
        "test": [
            "id-dev",
            "id-test",
            "ru-dev",
            "ru-test"
        ],
        "filter": "10:1200"
    },
    "tokenizer": {
        "type": "LexiconTokenizer",
        "option-init": {
            "lexicon": "data/lang-mul/lexicon"
        }
    },
    "train": {
        "bin": "cat.ctc.train",
        "option": {
            "amp": true,
            "batching_mode": "bucket",
            "bucket_size": 92160,
            "batching_uneven": true,
            "check_freq": 1000,
            "eval_error_rate": true
        }
    },
    "inference": {
        "avgmodel": {
            "mode": "best",
            "num": 3
        },
        "infer": {
            "bin": "cat.ctc.cal_logit",
            "option": {
                "nj": 48
            }
        }
    }
}