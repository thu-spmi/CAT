{
    "net": {
        "type": "ConformerNet_JoinAP_NonLinear",
        "lossfn": "crf",
        "lamb": 0.01,
        "kwargs": {
            "num_cells": 16,
            "idim": 80,
            "hdim": 360,
            "conv_multiplier": 360,
            "num_classes": 36,
            "dropout": 0.3,
            "res_factor": 0.3,
            "delta_feats": false
        }
    },
    "specaug_config": {
        "time_warp_window": 0.2,
        "freq_mask_width_range": 0.15,
        "num_freq_mask": 2,
        "time_mask_width_range": 0.05,
        "num_time_mask": 2
    },
    "scheduler": {
        "type": "SchedulerTransformerEarlyStop",
        "optimizer": {
            "type_optim": "Adam",
            "kwargs": {
                "lr": 3e-4,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-6
            }
        },
        "kwargs": {
            "peak_factor": 1.0,
            "d_model": 360,
            "warmup_steps": 1e4,
            "lr_stop": 1e-6,
            "gamma": 0.3,
            "reverse_metric_direc": true
        }
    }
}
