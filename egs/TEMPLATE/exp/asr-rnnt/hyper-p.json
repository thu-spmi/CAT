{
    "data": {
        "train": "yesno",
        "dev": "yesno",
        "test": "yesno",
        "filter": "10:2000"
    },
    "tokenizer": {
        "type": "SentencePieceTokenizer",
        "option-train": {
            "model_type": "char",
            "use_all_vocab": true,
            "vocab_size": 8,
            "model_prefix": "sentencepiece/yesno_char/spm"
        }
    },
    "env": {
        "CUDA_VISIBLE_DEVICES": "0"
    },
    "train": {
        "bin": "cat.rnnt.train",
        "option": {
            "amp": true,
            "batch_size": 4,
            "check_freq": 50
        }
    },
    "inference": {
        "infer": {
            "bin": "cat.rnnt.decode",
            "option": {
                "beam_size": 16,
                "cpu": true,
                "nj": 4
            }
        },
        "er": {}
    }
}